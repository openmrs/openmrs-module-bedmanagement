<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Add here beans related to the API context -->


    <!-- Services accessible via Context.getService() -->

    <bean parent="serviceContext">
        <property name="moduleService">
            <list merge="true">
                <value>${project.parent.groupId}.${project.parent.artifactId}.service.BedManagementService</value>
                <ref local="bedManagementService"/>
            </list>
        </property>
    </bean>

    <bean id="bedManagementService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <bean class="org.openmrs.module.bedmanagement.service.impl.BedManagementServiceImpl">
                <property name="bedDao">
                    <bean class="${project.parent.groupId}.${project.parent.artifactId}.dao.impl.BedDaoImpl">
                        <property name="sessionFactory">
                            <ref bean="sessionFactory"/>
                        </property>
                    </bean>
                </property>
                <property name="bedTypeDao">
                    <bean class="${project.parent.groupId}.${project.parent.artifactId}.dao.impl.BedTypeDaoImpl">
                        <property name="sessionFactory">
                            <ref bean="sessionFactory"/>
                        </property>
                    </bean>
                </property>
                <property name="bedLocationMappingDao">
                    <bean class="${project.parent.groupId}.${project.parent.artifactId}.dao.impl.BedLocationMappingDaoImpl">
                        <property name="sessionFactory">
                            <ref bean="sessionFactory"/>
                        </property>
                    </bean>
                </property>
                <property name="admissionLocationDao">
                    <bean class="${project.parent.groupId}.${project.parent.artifactId}.dao.impl.AdmissionLocationDaoImpl">
                        <property name="sessionFactory">
                            <ref bean="sessionFactory"/>
                        </property>
                    </bean>
                </property>
                <property name="bedPatientAssignmentDao">
                    <bean class="${project.parent.groupId}.${project.parent.artifactId}.dao.impl.BedPatientAssignmentDaoImpl">
                        <property name="sessionFactory">
                            <ref bean="sessionFactory"/>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors"/>
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource"/>
        </property>
    </bean>

    <bean parent="serviceContext">
